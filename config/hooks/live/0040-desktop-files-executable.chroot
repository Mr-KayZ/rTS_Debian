#!/bin/bash
# Make desktop files executable to prevent "untrusted application" warnings

# Desktop shortcuts
chmod +x /home/user/Desktop/*.desktop 2>/dev/null || true

# System Recovery folder
chmod +x /home/user/Desktop/System_Recovery/*.desktop 2>/dev/null || true
chmod +x /etc/skel/Desktop/System_Recovery/*.desktop 2>/dev/null || true

# Make resolution script executable
chmod +x /usr/local/bin/set-default-resolution
