#!/bin/bash
echo "=== Memtest86+ memory test suite ==="
echo "System will reboot into Memory Test. This will test your RAM for errors"
echo "This may take a long time depending on the size of your RAM, potentially up to several hours."
echo "It is recommended to let the test run overnight for several passes."
read -p "Continue? (y/n): " confirm
if [ "$confirm" = "y" ]; then
    sudo grub-reboot "Memory Test (Memtest86+)"
    sudo reboot
fi
